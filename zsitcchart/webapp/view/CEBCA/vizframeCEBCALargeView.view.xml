<mvc:View
    controllerName="zdemowithpar.controller.CEBCA.vizframeCEBCALargeView"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    height="100%"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:commons="sap.suite.ui.commons"
    xmlns:layout="sap.ui.layout"
>
    <Page
        id="pageCEBCA"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <layout:FixFlex
            id='chartFixFlexCEBCA'
            minFlexSize="250"
        >
            <layout:fixContent>
                <Panel
                    id='settingsPanelCEBCA'
                    expandable="true"
                    expanded="true"
                    headerText="{i18n>settings}"
                    width="auto"
                >
                    <content>
                        <layout:Grid
                            defaultSpan="L2 M2 S12"
                            vSpacing="0"
                            hSpacing="1"
                        >
                            <VBox
                                width="100%"
                                class='settingsBox'
                            >
                                <Label
                                    text="{i18n>year}"
                                    design="Bold"
                                    class='settingsLabel'
                                />
                                <!--<Select
                                id='idYearSelect'
                                class='settingsSelect'
                                change='onYearChanged'
                                width="100%"
                            /> -->
                                <MultiComboBox
                                    id='idYearSelectCEBCA'
                                    selectionFinish='onYearChangeFinish'
                                    width="100%"
                                />
                            </VBox>
                            <VBox
                                width="100%"
                                class='settingsBox'
                            >
                                <Label
                                    text="{i18n>week}"
                                    design="Bold"
                                    class='settingsLabel'
                                />
                                <Select
                                    id='idWeekSelectCEBCA'
                                    class='settingsSelect'
                                    change='onWeekChanged'
                                    width="100%"
                                />
                            </VBox>
                        </layout:Grid>
                    </content>
                </Panel>
            </layout:fixContent>
            <layout:flexContent>
                <commons:ChartContainer
                    id="chartContainerCEBCA"
                    showFullScreen="true"
                    showPersonalization="false"
                    autoAdjustHeight="true"
                    personalizationPress="attachPersonalizationPress"
                    contentChange="attachContentChange"
                >
                    <commons:content>
                        <commons:ChartContainerContent>
                            <commons:content>
                                <viz:VizFrame
                                    id="idVizframeCEBCA"
                                    uiConfig="{applicationSet:'fiori'}"
                                    height='100%'
                                    width="100%"
                                />
                            </commons:content>
                        </commons:ChartContainerContent>
                    </commons:content>
                    <commons:toolbar>
                        <OverflowToolbar id="appToolbarCEBCA">
                            <ToolbarSpacer />
                            <Button
                                id="btnDownloadPDFCEBCA"
                                text="{i18n>btnDownloadPDF}"
                                type="Transparent"
                                press="onBtnDownloadPDF"
                            />
                            <commons:ChartContainerToolbarPlaceholder />
                        </OverflowToolbar>
                    </commons:toolbar>
                </commons:ChartContainer>
            </layout:flexContent>
        </layout:FixFlex>
    </Page>
</mvc:View>
