<mvc:View
    controllerName="zdemowithpar.controller.CEBCA.vizFrameCEBCAOrgView"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:commons="sap.suite.ui.commons"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
    <Page
        id="pageCEBCAOrg"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <layout:FixFlex
            id='chartFixFlexCEBCAOrg'
            minFlexSize="250"
            fixContentSize="auto"
        >
            <layout:fixContent>
                <Panel
                    id='settingsPanelCEBCAOrg'
                    expandable="true"
                    expanded="true"
                    headerText="{i18n>settings}"
                    width="auto"
                >
                    <content>
                        <layout:Grid
                            defaultSpan="L2 M2 S12"
                            vSpacing="0"
                            hSpacing="1"
                        >
                            <VBox
                                width="100%"
                                class='settingsBox'
                            >
                                <Label
                                    text="{i18n>year}"
                                    design="Bold"
                                    class='settingsLabel'
                                />
                                <MultiComboBox
                                    id='idYearSelectCEBCAOrg'
                                    selectionFinish='onYearChangeFinish'
                                    width="100%"
                                />
                            </VBox>
                            <VBox
                                width="100%"
                                class='settingsBox'
                            >
                                <Label
                                    text="{i18n>week}"
                                    design="Bold"
                                    class='settingsLabel'
                                />
                                <Select
                                    id='idWeekSelectCEBCAOrg'
                                    class='settingsSelect'
                                    change='onWeekChanged'
                                    width="100%"
                                />
                            </VBox>
                            <VBox
                                width="100%"
                                class='settingsBox'
                            >
                                <Label
                                    text="{i18n>Org}"
                                    design="Bold"
                                    class='settingsLabel'
                                />
                                <Select
                                    id='idOrgSelectListCEBCA'
                                    width="100%"
                                    change='onOrgChanged'
                                />
                            </VBox>
                        </layout:Grid>
                    </content>
                </Panel>
            </layout:fixContent>
            <layout:flexContent>
                <VBox
                    fitContainer="true"
                    height="100%"
                >
                    <commons:ChartContainer
                        id="chartContainerCEBCAOrg"
                        showFullScreen="true"
                        showPersonalization="false"
                        autoAdjustHeight="true"
                        personalizationPress="attachPersonalizationPress"
                        contentChange="attachContentChange"
                    >
                        <commons:content>
                            <commons:ChartContainerContent>
                                <commons:content>
                                    <viz:VizFrame
                                        id="idVizframeCEBCAOrg"
                                        uiConfig="{applicationSet:'fiori'}"
                                    />
                                </commons:content>
                            </commons:ChartContainerContent>
                        </commons:content>
                        <commons:toolbar>
                            <OverflowToolbar id="appToolbarCEBCAOrg">
                                <ToolbarSpacer />
                                <Button
                                    id="btnDownloadPDFCEBCAOrg"
                                    text="{i18n>btnDownloadPDF}"
                                    type="Transparent"
                                    press="onBtnDownloadPDF"
                                />
                                <commons:ChartContainerToolbarPlaceholder />
                            </OverflowToolbar>
                        </commons:toolbar>
                    </commons:ChartContainer>
                    <viz:VizSlider
                        id="idVizSliderCEBCAOrg"
                        uiConfig="{applicationSet:'fiori'}"
                        width="100%"
                        vizType="info/column"
                        valueAxisVisible="false"
                        height="1rem"
                    />
                </VBox>
            </layout:flexContent>
        </layout:FixFlex>
    </Page>
</mvc:View>
