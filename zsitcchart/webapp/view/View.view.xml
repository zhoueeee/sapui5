<mvc:View
    controllerName="zdemowithpar.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    height="100%"
>
    <layout:FixFlex
        id='chartFixFlex'
        minFlexSize="250"
    >
        <layout:fixContent>
            <Panel
                id='settingsPanel'
                class="panelStyle"
                expandable="true"
                expanded="true"
                headerText="{i18n>settings}"
                width="auto"
            >
                <content>
                    <layout:Grid
                        defaultSpan="L2 M2 S12"
                        vSpacing="0"
                        hSpacing="0"
                    >
                        <VBox
                            class='settingsBox'
                            width="100%"
                        >
                            <Label
                                text="{i18n>year}"
                                design="Bold"
                                class='settingsLabel'
                            />
                            <Select
                                id='idYearSelect'
                                class='settingsSelect'
                                change='onYearChanged'
                                width="100%"
                            />
                        </VBox>
                        <VBox
                            class='settingsBox'
                            width="100%"
                        >
                            <Label
                                text="{i18n>week}"
                                design="Bold"
                                class='settingsLabel'
                            />
                            <Select
                                id='idWeekSelect'
                                class='settingsSelect'
                                change='onWeekChanged'
                                width="100%"
                            />
                        </VBox>
                    </layout:Grid>
                </content>
            </Panel>
        </layout:fixContent>
        <layout:flexContent>
            <layout:VerticalLayout width="100%">
                <layout:VerticalLayout
                    width="100%"
                    class="gridWrapper"
                >
                    <layout:Grid
                        id="idGridChart"
                        containerQuery="true"
                        vSpacing="0"
                        hSpacing="0"
                        defaultSpan="L6 M6 S12"
                    />
                </layout:VerticalLayout>
            </layout:VerticalLayout>
        </layout:flexContent>
    </layout:FixFlex>
</mvc:View>
